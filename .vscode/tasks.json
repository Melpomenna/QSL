{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure Debug",
            "type": "shell",
            "command": "cmake --preset=debug-Windows",
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "cmake --build . --preset=debug-Windows",
        },
        {
            "label": "Configure Release",
            "type": "shell",
            "command": "cmake --preset=release-Windows"
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "cmake --build . --preset=release-Windows"
        },
        {
            "label": "Test Debug",
            "type": "shell",
            "command": "ctest --preset=release-Windows"
        },
        {
            "label": "Test Release",
            "type": "shell",
            "command": "ctest --preset=release-Windows"
        },
        {
            "label": "Benchmark Debug Windows",
            "type": "shell",
            "command": "./build/debug/WorkFolder/Benchmarks.exe"
        },
        {
            "label": "Benchmark Release Windows",
            "type": "shell",
            "command": "./build/release/WorkFolder/Benchmarks.exe"
        }
    ]
}